# Porta e host do servidor Express
HOST=0.0.0.0
PORT=5000
NODE_ENV=development

# CORS
CORS_ORIGIN=*

# JWT
# Preferencialmente use JWT_SECRET_KEY. SECRET_KEY é fallback.
JWT_SECRET_KEY=alterar-esta-chave-em-producao
# SECRET_KEY=legacy-ou-fallback
TOKEN_EXPIRATION_DAYS=30

# Bancos de dados (caminhos relativos à pasta backendNode)
USERS_DB_PATH=users.db
RECIPES_DB_PATH=recipes.db
